{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "../..",
    "outDir": "build",
    "baseUrl": "../..",
    "paths": {
      "@/*": ["src/*"],
      "@/env/*": ["src/env/*"],
      "@/config/*": ["src/config/*"]
    }
  },
  "include": ["**/*", "../config/**/*", "../env/**/*"],
  "references": [
    { "path": "../domains/vendors" },
    { "path": "../domains/onboarding" },
    { "path": "../lib" },
    { "path": "../utils" }
  ]
}
