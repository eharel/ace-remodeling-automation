{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020"],
    "strict": true,
    "types": ["google-apps-script"],
    "typeRoots": ["node_modules/@types"],
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@pm/*": ["pm-toolkit/src/*"],
      "@ui/*": ["ui/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/sandbox"]
}
