{
  "files": [],
  "references": [
    { "path": "src/shared" },
    { "path": "src/tables" },
    { "path": "src/pm-toolkit" },
    { "path": "src/ui" },
    { "path": "src/utils" }
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020"],
    "strict": true,
    "types": ["google-apps-script"],
    "typeRoots": ["node_modules/@types"],
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@pm/*": ["pm-toolkit/src/*"],
      "@ui/*": ["ui/*"],
      "@utils/*": ["utils/*"],
      "@tables/*": ["tables/*"]
    }
  },
  "include": ["src/**/*", "sandbox"],
  "exclude": ["sandbox"]
}
