{
  "files": [],
  "references": [
    { "path": "src/shared" },
    { "path": "src/tables" },
    { "path": "src/forms" },
    { "path": "src/domains/pm-toolkit" },
    { "path": "src/domains/vendors" },
    { "path": "src/apps-scripts/forms-library" },
    { "path": "src/ui" },
    { "path": "src/utils" }
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020"],
    "strict": true,
    "types": ["google-apps-script"],
    "typeRoots": ["node_modules/@types"],
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@pm/*": ["domains/pm-toolkit/*"],
      "@ui/*": ["ui/*"],
      "@utils/*": ["utils/*"],
      "@tables/*": ["tables/*"],
      "@domains/*": ["domains/*"],
      "@forms/*": ["forms/*"],
      "@/env/*": ["env/*"],
      "@/forms/*": ["forms/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": ["sandbox"],
  "exclude": ["sandbox"]
}
